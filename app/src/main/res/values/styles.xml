<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title" parent="@style/TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">1000dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="Button.Inactive" parent="Button">
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Button.Gender" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">1000dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/darker_grey</item>
        <item name="strokeColor">@color/darker_grey</item>
        <item name="rippleColor">@color/orange</item>
    </style>

    <style name="Headline5.Subdued" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/darker_grey</item>
    </style>

    <style name="Headline6.Subdued" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/darker_grey</item>
    </style>

    <style name="Button.Back" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="srcCompat">@drawable/ic_left_arrow_angle_big_gross_symbol</item>
        <item name="tint">@color/dark_grey</item>
        <item name="strokeColor">@color/white</item>
        <item name="borderWidth">@dimen/zero</item>
        <item name="elevation">@dimen/zero</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="Button.X" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="srcCompat">@drawable/ic_close</item>
        <item name="tint">@color/dark_grey</item>
        <item name="strokeColor">@color/white</item>
        <item name="borderWidth">@dimen/zero</item>
        <item name="elevation">@dimen/zero</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>
</resources>